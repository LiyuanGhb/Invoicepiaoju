<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/checking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="" />
    <TextView
        android:id="@+id/checking_phone"
        android:layout_below="@+id/checking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="" />
    <TextView
        android:id="@+id/checking_stute"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/checking_ok_btn"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/checking_no_btn"
        android:background="@drawable/buttonblue"
        android:text="同意"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/checking_no_btn"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/buttonred"
        android:text="拒绝"
        android:textColor="@color/white" />
</RelativeLayout>